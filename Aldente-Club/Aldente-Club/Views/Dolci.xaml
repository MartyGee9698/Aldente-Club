<UserControl x:Class="RistoranteApp.Views.DolciPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <ScrollViewer>
        <WrapPanel>
            <!-- Esempio piatto -->
            <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10" Width="200">
                <StackPanel>
                    <Image Source="pack://application:,,,/FotoMenuAlDente/TiramisuSenzaRegole.jpeg"
Height="120" Width="180" Stretch="Uniform"/>
                    <TextBlock Text="Tiramisù senza regole (strati di savoiardi al caffè, crema al mascarpone e zabaglione, ananas e fragole, cacao) " FontWeight="Bold" Margin="0,5"/>
                    <Button Content="Aggiungi all'ordine" Click="Aggiungi_Click" Tag="Tiramisu Senza Regole"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10" Width="200">
                <StackPanel>
                    <Image Source="pack://application:,,,/FotoMenuAlDente/SferaDiCapreseEsplosiva.webp"
Height="120" Width="180" Stretch="Uniform"/>
                    <TextBlock Text="Sfera di caprese esplosiva (sfera al cioccolato fondente che si scioglie al tocco, rivelando torta caprese al limone e crema al pistacchio)" FontWeight="Bold" Margin="0,5"/>
                    <Button Content="Aggiungi all'ordine" Click="Aggiungi_Click" Tag="Sfera Di Caprese Esplosiva"/>
                </StackPanel>
            </Border>
            <!-- Altri piatti simili -->
        </WrapPanel>
    </ScrollViewer>
</UserControl>
