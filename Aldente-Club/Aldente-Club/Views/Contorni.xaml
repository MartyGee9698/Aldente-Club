<UserControl x:Class="RistoranteApp.Views.ContorniPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <ScrollViewer>
        <WrapPanel>
            <!-- Esempio piatto -->
            <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10" Width="200">
                <StackPanel>
                    <Image Source="pack://application:,,,/FotoMenuAlDente/PatateAlFormaggio.jpg"
Height="120" Width="180" Stretch="Uniform"/>
                    <TextBlock Text="Patate al formaggio ( patate soufflé con cuore di taleggio fuso e scorza di arancia bruciata)" FontWeight="Bold" Margin="0,5"/>
                    <Button Content="Aggiungi all'ordine" Click="Aggiungi_Click" Tag="Patate al Formaggio"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10" Width="200">
                <StackPanel>
                    <Image Source="pack://application:,,,/FotoMenuAlDente/InsalataSenzaPerdono.jpg"
Height="120" Width="180" Stretch="Uniform"/>
                    <TextBlock Text="Insalata senza perdono ( radicchio trevigiano, pere caramellate al pepe nero, glassato con aceto balsamico)" FontWeight="Bold" Margin="0,5"/>
                    <Button Content="Aggiungi all'ordine" Click="Aggiungi_Click" Tag="Insalata Senza Perdono"/>
                </StackPanel>
            </Border>
            <!-- Altri piatti simili -->
        </WrapPanel>
    </ScrollViewer>
</UserControl>
