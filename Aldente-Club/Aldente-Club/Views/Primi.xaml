<UserControl x:Class="RistoranteApp.Views.Primi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RistoranteApp.Views"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">
    <ScrollViewer>
        <WrapPanel>
            <!-- Esempio piatto -->
            <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10" Width="200">
                <StackPanel>
                    <!--<Image Source="Images/bruschetta.jpg" Height="100" Stretch="UniformToFill"/>-->
                    <TextBlock Text="Risotto al blu" FontWeight="Bold" Margin="0,5"/>
                    <Button Content="Aggiungi all'ordine" Click="Aggiungi_Click"/>
                </StackPanel>
            </Border>

            <!-- Altri piatti simili -->
        </WrapPanel>
    </ScrollViewer>
</UserControl>
