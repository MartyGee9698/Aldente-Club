<UserControl x:Class="RistoranteApp.Views.PrimiPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RistoranteApp.Views"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">
    <ScrollViewer>
        <WrapPanel>
            <!-- Esempio piatto -->
            <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10" Width="200">
                <StackPanel>
                    <Image Source="pack://application:,,,/FotoMenuAlDente/RisottoAlBlu.jpg"
       Height="120" Width="180" Stretch="Uniform"/>
                    <TextBlock Text="Risotto al blu (risotto alla gorgonzola con polvere di mirtilli neri e nocciole tostate)" FontWeight="Bold" Margin="0,5"/>
                    <Button Content="Aggiungi all'ordine" Click="Aggiungi_Click" Tag="Risotto Al Blu"/>
                </StackPanel>   
            </Border>
            
            <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10" Width="200">
                <StackPanel>
                    <Image Source="pack://application:,,,/FotoMenuAlDente/LinguineAll'Aragosta.jpg"
Height="120" Width="180" Stretch="Uniform"/>
                    <TextBlock Text="Linguine all’aragosta (pomodorini freschi, aglio, prezzemolo con sfumata di vino bianco)" FontWeight="Bold" Margin="0,5"/>
                    <Button Content="Aggiungi all'ordine" Click="Aggiungi_Click" Tag="Linguine All'Aragosta"/>
                </StackPanel>
            </Border>

            <!-- Altri piatti simili -->
        </WrapPanel>
    </ScrollViewer>
</UserControl>
