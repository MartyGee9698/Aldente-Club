<UserControl x:Class="RistoranteApp.Views.SecondiPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <ScrollViewer>
        <WrapPanel>
            <!-- Esempio piatto -->
            <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10" Width="200">
                <StackPanel>
                    <Image Source="pack://application:,,,/FotoMenuAlDente/MaialeInUniforme.jpg"
Height="120" Width="180" Stretch="Uniform"/>
                    <TextBlock Text="Maiale In Uniforme (costine glassate alla birra con patate affumicate e salsa allo sciroppo d’acero piccante) " FontWeight="Bold" Margin="0,5"/>
                    <Button Content="Aggiungi all'ordine" Click="Aggiungi_Click" Tag="Maiale In Uniforme"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10" Width="200">
                <StackPanel>
                    <Image Source="pack://application:,,,/FotoMenuAlDente/PesceSpadaDisorientato.jpg"
Height="120" Width="180" Stretch="Uniform"/>
                    <TextBlock Text="Pesce Spada Disorientato (carpaccio di pesce spada marinato al lime con gel di cetriolo)" FontWeight="Bold" Margin="0,5"/>
                    <Button Content="Aggiungi all'ordine" Click="Aggiungi_Click" Tag="Pesce Spada Disorientato"/>
                </StackPanel>
            </Border>
            <!-- Altri piatti simili -->
        </WrapPanel>
    </ScrollViewer>
</UserControl>
