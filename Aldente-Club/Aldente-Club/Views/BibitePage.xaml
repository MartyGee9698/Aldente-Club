<UserControl x:Class="RistoranteApp.Views.BibitePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <ScrollViewer>
        <WrapPanel>
            <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10" Width="200">
                <StackPanel>
                    <Image Source="pack://application:,,,/FotoMenuAlDente/VinoRosso.jpg"
Height="120" Width="180" Stretch="Uniform"/>
                    <TextBlock Text="Vino Rosso della Casa" FontWeight="Bold" Margin="0,5"/>
                    <Button Content="Aggiungi all'ordine" Click="Aggiungi_Click" Tag="Vino Rosso"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10" Width="200">
                <StackPanel>
                    <Image Source="pack://application:,,,/FotoMenuAlDente/VinoBianco.jpg"
Height="120" Width="180" Stretch="Uniform"/>
                    <TextBlock Text="Vino Bianco" FontWeight="Bold" Margin="0,5"/>
                    <Button Content="Aggiungi all'ordine" Click="Aggiungi_Click" Tag="Vino Bianco"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10" Width="200">
                <StackPanel>
                    <Image Source="pack://application:,,,/FotoMenuAlDente/AcquaLete.png"
Height="120" Width="180" Stretch="Uniform"/>
                    <TextBlock Text="Acqua Lete" FontWeight="Bold" Margin="0,5"/>
                    <Button Content="Aggiungi all'ordine" Click="Aggiungi_Click" Tag="Acqua Lete"/>
                </StackPanel>
            </Border>

            <!-- Altre bibite/vini -->
        </WrapPanel>
    </ScrollViewer>
</UserControl>
