<UserControl x:Class="RistoranteApp.Views.BibitePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <ScrollViewer>
        <WrapPanel>
            <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10" Width="200">
                <StackPanel>
                    <Image Source="pack://application:,,,/FotoMenuAlDente/VinoRosso.png"
                           Height="120" Width="180" Stretch="Uniform"/>
                    <TextBlock Text="Vino Rosso della Casa" FontWeight="Bold" Margin="0,5"/>
                    <Button Content="Aggiungi all'ordine" Click="Aggiungi_Click" Tag="Vino Rosso"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10" Width="200">
                <StackPanel>
                    <Image Source="pack://application:,,,/FotoMenuAlDente/ColaArtigianale.png"
                           Height="120" Width="180" Stretch="Uniform"/>
                    <TextBlock Text="Cola Artigianale" FontWeight="Bold" Margin="0,5"/>
                    <Button Content="Aggiungi all'ordine" Click="Aggiungi_Click" Tag="Cola Artigianale"/>
                </StackPanel>
            </Border>

            <!-- Altre bibite/vini -->
        </WrapPanel>
    </ScrollViewer>
</UserControl>
