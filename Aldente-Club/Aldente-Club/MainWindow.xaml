<Window x:Class="RistoranteApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RistoranteApp"
        Title="Menu Ristorante" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <!-- Menù laterale -->
            <ColumnDefinition Width="*"/>
            <!-- Contenuto dinamico -->
        </Grid.ColumnDefinitions>

        <!-- Menù laterale -->
        <StackPanel Background="LightGray" Grid.Column="0">
            <Button Content="Antipasto" Click="Antipasto_Click" Margin="5"/>
            <Button Content="Primo" Click="Primo_Click" Margin="5"/>
            <!--<Button Content="Secondo" Click="Secondo_Click" Margin="5"/>
            <Button Content="Dolce" Click="Dolce_Click" Margin="5"/>
            <Button Content="Bevande" Click="Bevande_Click" Margin="5"/>-->
        </StackPanel>

        <!-- Area per visualizzare UserControl -->
        <ContentControl x:Name="ContentArea" Grid.Column="1"/>
    </Grid>
</Window>
