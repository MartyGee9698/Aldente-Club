<Window x:Class="RistoranteApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RistoranteApp"
        Title="Menu AlDente-Club" Height="500" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <!-- Menù laterale -->
            <ColumnDefinition Width="*"/>
            <!-- Contenuto dinamico -->
            <ColumnDefinition Width="250"/>
            <!-- Lista Ordini -->
        </Grid.ColumnDefinitions>

        <!-- Menù laterale -->
        <StackPanel Background="LightGray" Grid.Column="0">
            <TextBlock Text="Categorie" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <Button x:Name="AntipastiButton" Content="Antipasti" Click="Antipasto_Click" Margin="0,5" Height="40"/>
            <Button x:Name="PrimiButton" Content="Primi" Click="Primo_Click" Margin="0,5" Height="40"/>
            <Button x:Name="SecondiButton" Content="Secondi" Click="Secondi_Click" Margin="0,5" Height="40"/>
            <Button x:Name="ContorniButton" Content="Contorni" Click="Contorni_Click" Margin="0,5" Height="40"/>
            <Button x:Name="DolciButton" Content="Dolci" Click="Dolci_Click" Margin="0,5" Height="40"/>
            <Button x:Name="BibiteButton" Content="Bibite / Vini" Click="Bibite_Click" Margin="0,5" Height="40"/>
        </StackPanel>

        <!-- Area per visualizzare UserControl -->
        <ContentControl x:Name="ContentArea" Grid.Column="1" />

        <!-- Lista Ordini -->
        <Border Grid.Column="2" Background="#FFF0F0F0" Padding="10" Margin="5" BorderBrush="Gray" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Ordine" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center" Grid.Row="0"/>

                <ListBox x:Name="OrderListBox" Grid.Row="1" 
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch" />

                <Button Content="Svuota Ordine" Grid.Row="2" Margin="0,10,0,0" Height="35" Click="ClearOrder_Click"/>

                <Button Content="Conferma Ordine" Grid.Row="3" Margin="0,10,0,0" Height="35" Click="ConfirmOrder_Click"/>
            </Grid>
        </Border>

    </Grid>
</Window>
