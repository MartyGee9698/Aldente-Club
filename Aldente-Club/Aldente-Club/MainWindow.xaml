<Window x:Class="Aldente_Club.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Feedback" Height="480" Width="400"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20" VerticalAlignment="Center">

        <TextBlock Text="Valuta il nostro servizio:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <ToggleButton x:Name="Star1" Content="★" FontSize="40" Foreground="Gray" 
                          Checked="Star_Checked" Unchecked="Star_Unchecked" />
            <ToggleButton x:Name="Star2" Content="★" FontSize="40" Foreground="Gray" 
                          Checked="Star_Checked" Unchecked="Star_Unchecked" />
            <ToggleButton x:Name="Star3" Content="★" FontSize="40" Foreground="Gray" 
                          Checked="Star_Checked" Unchecked="Star_Unchecked" />
            <ToggleButton x:Name="Star4" Content="★" FontSize="40" Foreground="Gray" 
                          Checked="Star_Checked" Unchecked="Star_Unchecked" />
            <ToggleButton x:Name="Star5" Content="★" FontSize="40" Foreground="Gray" 
                          Checked="Star_Checked" Unchecked="Star_Unchecked" />
        </StackPanel>

        <TextBlock Text="Lascia un commento:" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
        <TextBox x:Name="CommentTextBox" Height="80" AcceptsReturn="True" TextWrapping="Wrap" />

        <Button Content="Invia Feedback" Margin="0,15,0,0" Padding="10"
                Background="#FF007ACC" Foreground="White" FontWeight="Bold"
                Click="InviaFeedback_Click" />

        <TextBlock x:Name="RisultatoTextBlock"
           Foreground="Green"
           FontWeight="Bold"
           Visibility="Collapsed"
           Margin="0,15,0,0"
           FontSize="14"
           TextWrapping="Wrap"
           TextAlignment="Center"
           HorizontalAlignment="Center"/>

    </StackPanel>
</Window>
